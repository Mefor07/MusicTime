<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/albumImage"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="340dp" />

            <LinearLayout
                android:id="@+id/linearlayout1"
                android:layout_below="@+id/albumImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="21dp">

                <TextView
                    android:id="@+id/artist_name"
                    style="@style/Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bad Bunny"/>

                <TextView
                    android:id="@+id/album_name"
                    style="@style/TextStyle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Un Verano Sin Ti"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/genre_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:gravity="center_horizontal"
                    android:text="Released May 20, 2022"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:gravity="center_horizontal"
                    android:text="Copyright 2022 Apple Inc. All rights reserved."/>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="13dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/visit_button">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text_semibold"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:layout_gravity="center_horizontal"
                        android:letterSpacing="-0.04"
                        android:text="Visit The Album"/>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>




</LinearLayout>